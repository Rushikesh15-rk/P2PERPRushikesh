@model IEnumerable<P2PLibray.GRN.GRN>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle datatable1" id="itemsTable">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="selectAll"></th>
                <th>#</th>
                <th>QC Code</th>
                <th>GRN Code</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Checked By</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                var statusClass = item.Status == "Confirmed" ? "badge bg-success" : "badge bg-danger";
                    <tr>

                        <td><input type="checkbox" class="row-select" value="@i"></td>
                        <td>@i</td>
                        <td>@item.QualityCheckCode</td>
                        <td>@item.GRNCode</td>
                        <td>@item.ItemName</td>
                        <td>@item.Quantity</td>
                        <td><span class="@statusClass">@item.Status</span></td>
                        <td>@item.AddedBy</td>
                        <td>@item.AddedDate</td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No items found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
